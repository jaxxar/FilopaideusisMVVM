<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FilopaideusisMVVM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#212121</item>
        <!-- Customize your theme here. -->
        <item name="BackgroundColor">#303030</item>
        <item name="BackgroundColorElement">#a2acbd</item>
        <item name="TextColor">#fff</item>
        <item name="VectorColor">#fff</item>
        <item name="ButtonColor">#424242</item>
        <item name="ListButtonColor">#424242</item>
        <item name="HeaderColor">#212121</item>
    </style>

    <style name="BackgroundColor" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">?attr/BackgroundColor</item>
    </style>

    <style name="VectorColorBackground" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">?attr/VectorColor</item>
    </style>

    <style name="BackgroundColorElement" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">?attr/BackgroundColorElement</item>
    </style>

    <style name="TextColorWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/TextColor</item>
        <item name="android:textColorHint">?attr/TextColor</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:queryBackground">?attr/BackgroundColorElement</item>
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="android:maxWidth">@dimen/search_view_max_width</item>
    </style>

    <style name="NormalText" parent="TextColorWhite">
        <item name="android:textSize">@dimen/text_size_text_normal</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">@dimen/text_size_text_normal_min</item>
        <item name="android:autoSizeMaxTextSize">@dimen/text_size_text_normal</item>
    </style>

    <style name="TextColorWhite.big" parent="TextColorWhite">
        <item name="android:textSize">@dimen/text_size_header</item>
    </style>

    <style name="TextColorWhite.mainTitles" parent="TextColorWhite">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_main_titles</item>
    </style>

    <style name="TextColorWhite.sectionTitles" parent="TextColorWhite">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonColor" parent="CardView">
        <item name="cardBackgroundColor">?attr/ButtonColor</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">@dimen/button_layout_width</item>
        <item name="android:layout_height">@dimen/button_layout_height</item>
        <item name="cardCornerRadius">@dimen/basic_card_corner_radius</item>
    </style>

    <style name="TextColorWhite.button" parent="TextColorWhite">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextColorWhite.header" parent="TextColorWhite">
        <item name="android:background">?attr/HeaderColor</item>
    </style>

    <style name="TextColorWhite.toolbarHeader" parent="TextColorWhite.header">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BackgroundColorSectionItem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">?attr/ListButtonColor</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/TextColor</item>
        <item name="colorControlNormal">?attr/TextColor</item>
        <item name="colorControlActivated">?attr/TextColor</item>
        <item name="colorControlHighlight">?attr/TextColor</item>
        <item name="boxCornerRadiusBottomStart">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/box_corner_radius</item>
        <item name="boxStrokeWidth">@dimen/box_stroke_width</item>
        <item name="android:layout_marginHorizontal">50dp</item>
        <item name="android:textColor">?attr/TextColor</item>
        <item name="android:textColorHint">?attr/TextColor</item>
        <item name="android:colorAccent">?attr/TextColor</item>
        <item name="passwordToggleTint">?attr/TextColor</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/percentage_circle</item>
    </style>

</resources>