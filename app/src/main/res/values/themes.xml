<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FilopaideusisMVVM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="BackgroundColor">#BDBABA</item>
        <item name="TextColor">#fff</item>
        <item name="ButtonColor">#424242</item>
        <item name="ListButtonColor">#424242</item>
        <item name="HeaderColor">#212121</item>
    </style>

    <style name="BackgroundColor" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">?attr/BackgroundColor</item>
    </style>

    <style name="TextColorWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/TextColor</item>
        <item name="android:textColorHint">?attr/TextColor</item>
    </style>

    <style name="TextColorWhite.mainTitles" parent="TextColorWhite">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_main_titles</item>
    </style>

    <style name="TextColorWhite.sectionTitles" parent="TextColorWhite">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonColor" parent="CardView">
        <item name="cardBackgroundColor">?attr/ButtonColor</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="cardCornerRadius">@dimen/basic_card_corner_radius</item>
    </style>

    <style name="TextColorWhite.button" parent="TextColorWhite">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextColorWhite.header" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">?attr/TextColor</item>
        <item name="android:background">?attr/HeaderColor</item>
    </style>

    <style name="TextColorWhite.toolbarHeader" parent="TextColorWhite.header">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="sectionItem" parent="CardView">
        <item name="cardBackgroundColor">?attr/ListButtonColor</item>
        <item name="android:background">?attr/ListButtonColor</item>
        <item name="android:textColor">?attr/TextColor</item>
        <item name="android:textColorHint">?attr/TextColor</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginHorizontal">30dp</item>
        <item name="android:layout_width">@dimen/section_button_width</item>
        <item name="android:layout_height">50dp</item>
        <item name="cardCornerRadius">@dimen/basic_card_corner_radius</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/TextColor</item>
        <item name="colorControlNormal">?attr/TextColor</item>
        <item name="colorControlActivated">?attr/TextColor</item>
        <item name="colorControlHighlight">?attr/TextColor</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:layout_marginHorizontal">50dp</item>
        <item name="android:textColor">?attr/TextColor</item>
        <item name="android:textColorHint">?attr/TextColor</item>
        <item name="android:colorAccent">?attr/TextColor</item>
        <item name="passwordToggleTint">?attr/TextColor</item>

    </style>

</resources>